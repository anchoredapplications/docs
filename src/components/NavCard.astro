---
const { title, description, link, image } = Astro.props;
---

<a href={link} class="nav-card">
  <div class="card-content">
    <img src={image} alt={title + ' image'} class="card-image" />
    <div class="text-content">
      <h2>{title}</h2>
      <p>{description}</p>
    </div>
  </div>
</a>

<style>
  .nav-card {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    background-color: #2a2a2a; /* Lighter card background */
    border-radius: 12px;
    border: 1px solid #444;
    text-decoration: none;
    color: white;
    transition: transform 0.3s, box-shadow 0.3s;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    max-width: 500px;
    margin: 0 auto;
  }

  .nav-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
  }

  .card-content {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    width: 100%;
  }

  .card-image {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background-color: #ffffff20;
    padding: 0.5rem;
  }

  .text-content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
  }

  h2 {
    font-size: 1.75rem;
    margin: 0;
  }

  p {
    font-size: 1rem;
    margin: 0.25rem 0 0;
  }
</style>
