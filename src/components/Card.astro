---
const { heading, subheading } = Astro.props;
---

<div class="card">
    <h3>{heading}</h3>
    <p>
        {subheading}
    </p>
</div>

<style>
  .card {
    max-width: 40rem;
    margin: 3rem auto;
    padding: 1.5rem;
    background-color: #2e2e2e;
    color: white;
    border: 1px solid #444;
    border-radius: 0.75rem;
  }

  .card h3 {
    font-size: 1.75rem;
    font-weight: 600;
  }

  .card p {
    font-size: 1.25rem;
    margin-top: 1rem;
  }
</style>
