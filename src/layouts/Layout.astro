---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A documentation site for various projects of Jeremiah Gage." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/matchbot.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		background: linear-gradient(135deg, #121212, #1e1e1e);
    	color: white;
		padding-top: 80px;
		padding-bottom: 80px;
	}
	html {
		font-family: system-ui, sans-serif;
		background: linear-gradient(135deg, #121212, #1e1e1e);
    	color: white;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
